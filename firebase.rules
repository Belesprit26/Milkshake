rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isManager() {
      return signedIn() && request.auth.token.role == "manager";
    }

    function isSelf(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    match /lookups/{docId} {
      allow read: if true;
      allow create, update, delete: if isManager();
    }

    // Config is manager-controlled; orders store snapshots
    match /config/{docId} {
      allow read: if true;
      allow create, update, delete: if isManager();
    }

    match /users/{userId} {
      allow read, create, update: if isSelf(userId) || isManager();
      allow delete: if isManager();
    }

    match /orders/{orderId} {
      // Minimal baseline: owner can read/write their order; managers can read all.
      // Tighten write rules later (draft-only edits, immutable totals after payment)
      allow read: if isManager() || (signedIn() && resource.data.uid == request.auth.uid);
      allow create: if signedIn() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isManager() || (signedIn() && resource.data.uid == request.auth.uid);
    }

    // Append-only audit events. Patrons only see their own order-related events later
    match /audit_events/{eventId} {
      allow read: if isManager();
      allow create: if signedIn();
      allow update, delete: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
